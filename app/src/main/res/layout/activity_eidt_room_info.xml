<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.fanmaum.myroomz.ui.room.RoomInfoViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/heef0f6"
        android:orientation="vertical"
        tools:context="">

        <include
            android:id="@+id/actionBarView"
            layout="@layout/include_back_title_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <LinearLayout
                android:id="@+id/wordCountView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 룸 타이틀"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text='@{String.valueOf(vm.roomTitleTextLength)+"/25"}'
                    tools:text="0/25" />

            </LinearLayout>

            <com.fanmaum.myroomz.custom.CancelEditTextView
                android:id="@+id/edtRoomNameView"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/selector_cancel_edit_text"
                android:inputType="textMultiLine"
                android:maxLength="25"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="40dp"
                android:paddingBottom="12dp"
                android:singleLine="false"
                android:textColor="@color/black_text"
                android:textColorHint="@color/brown_grey"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wordCountView" />

            <LinearLayout
                android:id="@+id/roomAddressView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtRoomNameView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 룸 주소"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text='@{String.valueOf(vm.roomAddressTextLength)+"/20"}'
                    tools:text="0/20" />

            </LinearLayout>

            <com.fanmaum.myroomz.custom.CancelEditTextView
                android:id="@+id/edtRoomAddressVeiw"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/selector_cancel_edit_text"
                android:inputType="text"
                android:maxLength="20"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="40dp"
                android:paddingBottom="12dp"
                android:textColor="@color/black_text"
                android:textColorHint="@color/brown_grey"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roomAddressView" />


            <TextView
                android:id="@+id/saveBtn"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/selector_next_btn"
                android:enabled="@{vm.enableSaveBtnLiveData}"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/save"
                android:textColor="@{vm.enableSaveBtnLiveData ? @color/white : @color/ha4a5b1}"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:textColor="@color/white" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</layout>